{
  "index_patterns": [
    "delegators-*"
  ],
  "template": {
    "settings": {
      "index.lifecycle.name": "delegators-policy",
      "index.lifecycle.rollover_alias": "delegators",
      "number_of_replicas": 0,
      "number_of_shards": 3
    },
    "mappings": {
      "properties": {
        "activeStake": {
          "type": "keyword"
        },
        "activeStakeNum": {
          "type": "double"
        },
        "address": {
          "type": "keyword"
        },
        "contract": {
          "type": "keyword"
        },
        "unDelegateInfo": {
          "properties": {
            "id": {
              "type": "keyword"
            },
            "timestamp": {
              "format": "epoch_second",
              "type": "date"
            },
            "timestampMs": {
              "type":   "date",
              "format": "epoch_millis"
            },
            "value": {
              "type": "keyword"
            },
            "valueNum": {
              "type": "double"
            }
          }
        }
      }
    }
  }
}
