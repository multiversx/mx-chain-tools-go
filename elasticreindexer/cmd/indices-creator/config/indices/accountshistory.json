{
  "index_patterns": [
    "accountshistory-*"
  ],
  "template": {
    "settings": {
      "index.lifecycle.name": "accountshistory-policy",
      "index.lifecycle.rollover_alias": "accountshistory",
      "number_of_replicas": 1,
      "number_of_shards": 5
    },
    "mappings": {
      "properties": {
        "address": {
          "type": "keyword"
        },
        "balance": {
          "type": "keyword"
        },
        "isSender": {
          "type": "boolean"
        },
        "isSmartContract": {
          "type": "boolean"
        },
        "shardID": {
          "type": "long"
        },
        "timestamp": {
          "format": "epoch_second",
          "type": "date"
        },
        "timestampMs": {
          "type":   "date",
          "format": "epoch_millis"
        }
      }
    }
  }
}
