{
  "index_patterns": [
    "accountsesdthistory-*"
  ],
  "template": {
    "settings": {
      "index.lifecycle.name": "accountsesdthistory-policy",
      "index.lifecycle.rollover_alias": "accountsesdthistory",
      "number_of_replicas": 1,
      "number_of_shards": 5
    },
    "mappings": {
      "properties": {
        "address": {
          "type": "keyword"
        },
        "balance": {
          "type": "keyword"
        },
        "identifier": {
          "type": "text"
        },
        "isSender": {
          "type": "boolean"
        },
        "isSmartContract": {
          "type": "boolean"
        },
        "shardID": {
          "type": "long"
        },
        "timestamp": {
          "format": "epoch_second",
          "type": "date"
        },
        "timestampMs": {
          "type":   "date",
          "format": "epoch_millis"
        },
        "token": {
          "type": "keyword"
        },
        "tokenNonce": {
          "type": "double"
        }
      }
    }
  }
}
